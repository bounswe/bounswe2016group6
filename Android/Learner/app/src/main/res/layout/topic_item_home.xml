<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/md_keylines_mini"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageTopic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageTopic"
                android:background="#90424242"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:id="@+id/textTopicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTopic"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:paddingRight="10dip"
                android:paddingLeft="10dip">
                <ImageView
                    android:id="@+id/imgTopicPageUserImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/textAuthor"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/article_subheading" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:minLines="2"/>
            </LinearLayout>
            <com.doodle.android.chips.ChipsView
                android:id="@+id/cv_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_layout"
                android:overScrollMode="ifContentScrolls"
                android:layout_margin="@dimen/md_keylines_mini"
                app:cv_max_height="120dp"
                app:cv_vertical_spacing="2dp"
                app:cv_icon_placeholder="@drawable/ic_whatshot_black_24dp" />

            <Button
                android:id="@+id/like_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_contacts"
                android:text="LIKE"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/comment_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_contacts"
                android:layout_toEndOf="@id/like_button"
                android:layout_toRightOf="@id/like_button"
                android:text="COMMENT"
                android:textColor="@color/white" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>