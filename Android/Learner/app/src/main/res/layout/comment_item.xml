<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/md_keylines"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/md_keylines_mini">

            <ImageView
                android:id="@+id/commentUserImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="@dimen/md_keylines_mini"
                android:layout_marginRight="@dimen/md_keylines_mini"
                android:layout_marginTop="@dimen/md_keylines_mini"
                android:src="@drawable/ic_whatshot_black_24dp" />

            <TextView
                android:id="@+id/commentUsrName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/commentUserImg"
                android:layout_alignTop="@id/commentUserImg"
                android:layout_toEndOf="@+id/commentUserImg"
                android:layout_toRightOf="@+id/commentUserImg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="22"
                android:maxLines="1"
                android:text="abdullah muaz ekici"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/commentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/commentUserImg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/commentUserImg"
                android:gravity="center"
                android:text="12.10.2016"
                android:textColor="@color/cardview_dark_background" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/commentUserImg"
                android:layout_marginBottom="@dimen/md_keylines_mini"
                android:layout_marginTop="@dimen/md_keylines_mini"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_margin="@dimen/md_keylines_mini"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="asdkjhasıldfhbsafbuasdbausodygsavfasdrytfugblıkdyuafsvdlnşıbuvbfcuşadgfısdafyaıufdbjaksugfaysfvbduksf6ayusfvduıasgfdyuıaslvdylıasfdgı7uasgdbyaıuslfylsfasdaslkjhfjnpıoashfuıoasghfduıagsbhufıgashfdıasd"
                android:textColor="@color/cardview_dark_background" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>