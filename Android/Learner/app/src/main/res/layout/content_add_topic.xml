<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_topic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.group6boun451.learner.Activity.AddTopicActivity"
    tools:showIn="@layout/activity_add_topic">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_h1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H1"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/action_h2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H2"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action_h3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:width="40dp"
                android:height="40dp"
                android:background="@android:color/transparent"
                android:text="H3"
                android:textColor="#444444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_bold" />

            <ImageButton
                android:id="@+id/action_Italic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_italic" />

            <ImageButton
                android:id="@+id/action_indent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_indent" />

            <ImageButton
                android:id="@+id/action_outdent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_outdent" />

            <ImageButton
                android:id="@+id/action_bulleted"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_bullet_list" />

            <ImageButton
                android:id="@+id/action_unordered_numbered"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_numbered_list" />

            <ImageButton
                android:id="@+id/action_hr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_hr" />

            <ImageButton
                android:id="@+id/action_insert_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_image" />


            <ImageButton
                android:id="@+id/action_insert_link"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_link" />

            <ImageButton
                android:id="@+id/action_map"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_marker" />

            <ImageButton
                android:id="@+id/action_erase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/icon_erase" />
        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

</LinearLayout>