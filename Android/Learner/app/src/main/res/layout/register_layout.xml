<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/puzzle" />

    <com.group6boun451.learner.widget.CanaroTextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:text="Learner"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#ffffff"
       ></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/StudentContainer"
        android:padding="15dip">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelectRole"
        android:text="Select Your Role"
        android:onClick="btnSelectRoleClicked"
        android:textAllCaps="false"
        android:alpha="0.8"
        android:layout_marginTop="25dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="15dip"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginRight="12dip"
        android:layout_marginLeft="17dip"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginBottom="12dip"
            android:hint="First Name"
            android:id="@+id/usrFirstName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:layout_marginRight="12dip"
        android:layout_marginLeft="17dip"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginBottom="12dip"
            android:hint="Surname"
            android:id="@+id/usrSurname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginRight="12dip"
        android:layout_marginLeft="17dip"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginBottom="12dip"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:id="@+id/usrEmail"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginRight="12dip"
        android:layout_marginLeft="17dip"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginBottom="12dip"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/usrPass1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password(again)"
        android:layout_marginRight="12dip"
        android:layout_marginLeft="17dip"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginBottom="12dip"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:id="@+id/usrPass2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#ffffff"
        android:layout_marginBottom="5dip"></LinearLayout>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/colorAccent"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:onClick="btnCreateAccountClicked"/>
</LinearLayout>

    </ScrollView>







</LinearLayout>